<div class="container">
  <%if @notice%>		
  <div class="alert alert-success" role="alert"><%=@notice%></div>
	<%end%>	
  <div class='row'>
    <form method="post" action="/website">

      <div class="col-xs-10">
        <div class="form-group">
          <input type="text" name="address" class="form-control" placeholder="Enter any website address here">
        </div>
      </div>

      <div class="col-xs-2">
        <div class="form-group">
          <button type="submit"class="btn btn-primary btn-warning"><span class="glyphicon glyphicon-download-alt"></span> Add Website</button>
        </div>
      </div>

    </form>
  </div>
  <h2>
    Top 5 recent websites added fetched from cache  
  </h2>
  <table class="table table-striped">
    <tr>
      <th>Address</th>
    </tr>
	<% @websites.each do |website|%>	
    <tr>
      <td><%=website%></td>
    </tr>
	<% end %>

  </table>
